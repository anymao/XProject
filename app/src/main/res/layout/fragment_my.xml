<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:theme="@style/toolbarTheme"
                app:title="@string/my"
                app:titleTextColor="@android:color/white"/>

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="168dp">

                    <ImageView
                            android:id="@+id/iv_head"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_launcher"/>
                </FrameLayout>

                <TextView
                        android:id="@+id/tv_todo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/todo"
                        android:drawableStart="@drawable/ic_todo"
                        android:drawablePadding="15dp"
                        android:paddingLeft="@dimen/activity_horizontal_padding"
                        android:paddingRight="@dimen/activity_horizontal_padding"
                        android:paddingTop="@dimen/item_vertical_padding"
                        android:paddingBottom="@dimen/item_vertical_padding"/>

                <TextView
                        android:id="@+id/tv_collected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/collected"
                        android:drawableStart="@drawable/ic_collected"
                        android:drawablePadding="15dp"
                        android:paddingLeft="@dimen/activity_horizontal_padding"
                        android:paddingRight="@dimen/activity_horizontal_padding"
                        android:paddingTop="@dimen/item_vertical_padding"
                        android:paddingBottom="@dimen/item_vertical_padding"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/todo"
                        android:paddingLeft="@dimen/activity_horizontal_padding"
                        android:paddingRight="@dimen/activity_horizontal_padding"
                        android:paddingTop="@dimen/item_vertical_padding"
                        android:paddingBottom="@dimen/item_vertical_padding"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/todo"
                        android:paddingLeft="@dimen/activity_horizontal_padding"
                        android:paddingRight="@dimen/activity_horizontal_padding"
                        android:paddingTop="@dimen/item_vertical_padding"
                        android:paddingBottom="@dimen/item_vertical_padding"/>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</layout>